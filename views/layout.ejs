  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Mobile menu toggle
      const menuToggle = document.querySelector('.menu-toggle');
      const sidebar = document.querySelector('.app-sidebar');
      const overlay = document.querySelector('.mobile-overlay');
      
      function toggleMenu() {
        document.body.classList.toggle('menu-open');
        sidebar.classList.toggle('mobile-open');
        overlay.classList.toggle('active');
      }
      
      if (menuToggle) {
        menuToggle.addEventListener('click', toggleMenu);
      }
      
      if (overlay) {
        overlay.addEventListener('click', toggleMenu);
      }
      // Handle collapsible menu sections
      document.querySelectorAll('.nav-toggle').forEach(toggle => {
        toggle.addEventListener('click', function(e) {
          e.preventDefault();
          const section = this.getAttribute('data-section');
          const submenu = document.getElementById(section + '-submenu');
          const chevron = this.querySelector('.nav-chevron');
          
          if (submenu) {
            const isHidden = submenu.style.display === 'none';
            submenu.style.display = isHidden ? 'block' : 'none';
            
            // Rotate chevron
            if (isHidden) {
              chevron.style.transform = 'rotate(90deg)';
            } else {
              chevron.style.transform = 'rotate(0deg)';
            }
          }
        });
      });

      // Initialize chevron rotation for expanded sections
      document.querySelectorAll('.nav-sub-items').forEach(submenu => {
        if (submenu.style.display !== 'none') {
          const section = submenu.id.replace('-submenu', '');
          const toggle = document.querySelector(`[data-section="${section}"]`);
          if (toggle) {
            const chevron = toggle.querySelector('.nav-chevron');
            if (chevron) {
              chevron.style.transform = 'rotate(90deg)';
            }
          }
        }
      });
    });
  </script>
