<%- include('layout', { 
  title: 'More - CSS Properties', 
  body: `
    <section class="dashboard">
      <h1>Css Properties</h1>
      <div class="tabs">
        <div class="tabs-header">
          <button class="tab-btn active" data-tab="links">Links</button>
          <button class="tab-btn" data-tab="labels">Labels</button>
          <button class="tab-btn" data-tab="buttons">Buttons</button>
          <button class="tab-btn" data-tab="alerts">Alerts</button>
          <button class="tab-btn" data-tab="progress">Progress Bars</button>
        </div>
        <div class="tabs-body">
          <div class="tab-panel active" id="links">
            <div style="margin-top:2rem; text-align:center;">
              <a href="https://www.google.com" target="_blank" style="color:red; margin-right:2rem; text-decoration:none;">Link 1</a>
              <a href="https://www.bing.com" target="_blank" style="color:blue; margin-right:2rem; text-decoration:none;">Link 2</a>
              <a href="https://www.yahoo.com" target="_blank" style="color:green; margin-right:2rem; text-decoration:none;">Link 3</a>
              <a href="https://www.github.com" target="_blank" style="color:orange; margin-right:2rem; text-decoration:none;">Link 4</a>
              <a href="https://jalaacademy.com" target="_blank" style="color:purple; text-decoration:none;">Link 5</a>
            </div>
          </div>

          <div class="tab-panel" id="labels">
            <div style="margin-top:2rem; display:flex; gap:0.75rem; flex-wrap:wrap;">
              <span style="background:#6b7280; color:white; padding:0.35rem 0.75rem; border-radius:0.25rem; font-size:0.9rem;">Default</span>
              <span style="background:#2563eb; color:white; padding:0.35rem 0.75rem; border-radius:0.25rem; font-size:0.9rem;">Primary</span>
              <span style="background:#10b981; color:white; padding:0.35rem 0.75rem; border-radius:0.25rem; font-size:0.9rem;">Success</span>
              <span style="background:#3b82f6; color:white; padding:0.35rem 0.75rem; border-radius:0.25rem; font-size:0.9rem;">Info</span>
              <span style="background:#f59e0b; color:white; padding:0.35rem 0.75rem; border-radius:0.25rem; font-size:0.9rem;">Warning</span>
              <span style="background:#ef4444; color:white; padding:0.35rem 0.75rem; border-radius:0.25rem; font-size:0.9rem;">Danger</span>
            </div>
          </div>

          <div class="tab-panel" id="buttons">
            <div style="margin-top:2rem; display:flex; gap:0.75rem; flex-wrap:wrap;">
              <button style="background:white; color:#374151; border:1px solid #d1d5db; padding:0.5rem 1rem; border-radius:0.375rem; cursor:pointer;">Default</button>
              <button style="background:#2563eb; color:white; border:none; padding:0.5rem 1rem; border-radius:0.375rem; cursor:pointer;">Primary</button>
              <button style="background:#10b981; color:white; border:none; padding:0.5rem 1rem; border-radius:0.375rem; cursor:pointer;">Success</button>
              <button style="background:#f59e0b; color:white; border:none; padding:0.5rem 1rem; border-radius:0.375rem; cursor:pointer;">Warning</button>
              <button style="background:#ef4444; color:white; border:none; padding:0.5rem 1rem; border-radius:0.375rem; cursor:pointer;">Danger</button>
            </div>
          </div>

          <div class="tab-panel" id="alerts">
            <div style="margin-top:2rem;">
              <div style="background:#d1fae5; color:#065f46; padding:0.75rem 1rem; border-radius:0.375rem; margin-bottom:0.75rem; display:flex; justify-content:space-between; align-items:center;">
                <span>Success! Indicates a successful or positive action.</span>
                <span style="cursor:pointer; font-weight:bold; margin-left:1rem;">&times;</span>
              </div>
              <div style="background:#dbeafe; color:#1e40af; padding:0.75rem 1rem; border-radius:0.375rem; margin-bottom:0.75rem; display:flex; justify-content:space-between; align-items:center;">
                <span>Info! Indicates a neutral informative change or action.</span>
                <span style="cursor:pointer; font-weight:bold; margin-left:1rem;">&times;</span>
              </div>
              <div style="background:#fed7aa; color:#92400e; padding:0.75rem 1rem; border-radius:0.375rem; margin-bottom:0.75rem; display:flex; justify-content:space-between; align-items:center;">
                <span>Warning! Indicates a warning that might need attention.</span>
                <span style="cursor:pointer; font-weight:bold; margin-left:1rem;">&times;</span>
              </div>
              <div style="background:#fee2e2; color:#991b1b; padding:0.75rem 1rem; border-radius:0.375rem; display:flex; justify-content:space-between; align-items:center;">
                <span>Danger! Indicates a dangerous or potentially negative action.</span>
                <span style="cursor:pointer; font-weight:bold; margin-left:1rem;">&times;</span>
              </div>
            </div>
          </div>

          <div class="tab-panel" id="progress">
            <div style="margin-top:2rem;">
              <div style="background:#e5e7eb; height:24px; border-radius:9999px; overflow:hidden; margin-bottom:1rem;">
                <div style="background:#10b981; height:100%; width:45%; display:flex; align-items:center; justify-content:center; color:white; font-size:0.75rem;">45%</div>
              </div>
              <div style="background:#e5e7eb; height:24px; border-radius:9999px; overflow:hidden; margin-bottom:1rem;">
                <div style="background:#06b6d4; height:100%; width:35%; display:flex; align-items:center; justify-content:center; color:white; font-size:0.75rem;">35%</div>
              </div>
              <div style="background:#e5e7eb; height:24px; border-radius:9999px; overflow:hidden; margin-bottom:1rem;">
                <div style="background:#f59e0b; height:100%; width:65%; display:flex; align-items:center; justify-content:center; color:white; font-size:0.75rem;">65%</div>
              </div>
              <div style="background:#e5e7eb; height:24px; border-radius:9999px; overflow:hidden;">
                <div style="background:#ef4444; height:100%; width:85%; display:flex; align-items:center; justify-content:center; color:white; font-size:0.75rem;">85%</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <script>
        document.addEventListener('DOMContentLoaded', function() {
          // Tabs switching
          document.querySelectorAll('.tabs-header .tab-btn').forEach(btn => {
            btn.addEventListener('click', () => {
              document.querySelectorAll('.tabs-header .tab-btn').forEach(b => b.classList.remove('active'));
              document.querySelectorAll('.tabs-body .tab-panel').forEach(p => p.classList.remove('active'));
              btn.classList.add('active');
              document.getElementById(btn.dataset.tab).classList.add('active');
            });
          });

          // Alert close functionality
          document.querySelectorAll('#alerts span[style*="cursor:pointer"]').forEach(closeBtn => {
            closeBtn.addEventListener('click', function() {
              this.parentElement.style.display = 'none';
            });
          });
        });
      </script>
    </section>
  ` 
}) %>


